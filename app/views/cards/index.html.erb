<h1>Listing cards</h1>

<table>
  <tr>
    <th>Issuer</th>
    <th>Name</th>
    <th>Rewards type</th>
    <th>General rate</th>
    <th>Threshold amount</th>
    <th>Threshold rate</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @cards.each do |card| %>
  <tr>
    <td><%#= card.issuer.name %></td>
    <td><%= card.name %></td>
    <td><%= card.rewards_type %></td>
    <td><%= card.general_rate %></td>
    <td><%= card.threshold_amount %></td>
    <td><%= card.threshold_rate %></td>
    <td><%= link_to 'Edit', edit_card_path(card) %></td>
    <td><%= link_to 'Delete', card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

